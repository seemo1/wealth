
create table if not exists user_referral  (
    referral_code text,
    user_id text,
    referral_member set<text>,
    referral_by text,
    PRIMARY KEY (referral_code)
);

create index on user_referral (user_id);
create index on user_referral (referral_by);

create table if not exists by_user_count  (
    user_id text,
    key_name text,
    count counter,
    PRIMARY KEY (user_id, key_name)
);
